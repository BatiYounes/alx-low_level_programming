# Variables
CC = gcc
SRC = main.c other_source_file.c  # List your source files explicitly
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

# Default target
all: $(NAME)

# Build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Delete the executable and object files
clean:
	@$(RM) $(NAME)
	@$(RM) *.o
	@rm -f *~

# Delete the object files
oclean:
	@$(RM) *.o

# Delete the executable, object files, and temporary files
fclean: clean

# Recompile all source files
re: fclean all

# Ensure the header file m.h exists
main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c

other_source_file.o: other_source_file.c m.h
	$(CC) $(CFLAGS) -c other_source_file.c

# Phony targets
.PHONY: all clean oclean fclean re
