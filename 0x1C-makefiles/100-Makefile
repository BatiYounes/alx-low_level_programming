# Variables
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

# Default target
all: $(NAME)

# Build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Delete the executable and object files
clean:
	$(RM) $(NAME)
	$(RM) $(OBJ)

# Delete the object files
oclean:
	$(RM) $(OBJ)

# Delete the executable, object files, and temporary files
fclean: clean

# Recompile all source files
re: fclean all

# Ensure the header file m.h exists
$(OBJ): m.h

# Phony targets
.PHONY: all clean oclean fclean re
