CC := gcc
SRC := file1.c file2.c file3.c
NAME := school
OBJ := $(SRC:.c=.o)
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(NAME) $(OBJ) *~ school

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

%.o: %.c m.h

m.h:
	@echo "Error: m.h file is missing"
	@exit 1
