# Variables
CC = gcc
SRC = main.c other_source_file.c  # List your source files explicitly
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

# Default target
all: $(NAME)

# Build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Compile each source file into an object file
main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c -o main.o

other_source_file.o: other_source_file.c m.h
	$(CC) $(CFLAGS) -c other_source_file.c -o other_source_file.o

# Delete the executable and object files
clean:
	@$(RM) $(NAME)
	@$(RM) *.o
	@$(RM) *~

# Delete the object files
oclean:
	@$(RM) *.o

# Delete the executable, object files, and temporary files
fclean: clean

# Recompile all source files
re: fclean all

# Phony targets
.PHONY: all clean oclean fclean re
