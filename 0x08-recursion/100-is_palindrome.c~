#include "main.h"

int check_palindrome(char *s, int start, int end); /* Function prototype */

int is_palindrome(char *s)
{
    int len = 0;

    while (s[len] != '\0')
        len++;

    return check_palindrome(s, 0, len - 1);
}

int check_palindrome(char *s, int start, int end)
{
    if (start >= end)
        return 1;

    if (s[start] != s[end])
        return 0;

    return check_palindrome(s, start + 1, end - 1);
}
